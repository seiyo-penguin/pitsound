
    <title>Pitchsound コメント</title>


 <div class="contents row">
    <div class="success">
      <a class="btn" href="/tweets">投稿一覧へ戻る</a>
    </div>
  </div>

<div class="comments-title">

  <p class="username">User1</p>

  </div>
  <HR color="#191970">


<div class="comments-content clearfix">

  <p class="comments">コメント</p>
    <HR color="#191970">

<ul class="list-comments clearfix">
   <% Comments.each do |comment| %>
                <li style="border-bottom: dotted 1px">
                  <div class="thumbnail__caption">
                    <h3 class="text-xsmall text-overflow" title="<%= comment.nickname %>">
                      <span><i class="text-xxsmall" title=""></i></span><%= comment.nickname %>
                    </h3>
                    <p class="text-small">
                      <span class="rating-star"><i class="star-actived rate-[ここに評価を表示]0"></i></span>
                    </p>
                    <p>
                      <%= comment.comment %>
                    </p>
                  </div>
                </li>
                <% end %>
